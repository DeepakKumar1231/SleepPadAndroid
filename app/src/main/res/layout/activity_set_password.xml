            <EditText
                android:id="@+id/oldPasswordEt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/inputTextHeight"
                android:inputType="textPassword"
                android:hint="@string/oldPassword"
                android:textSize="@dimen/edit_text_size"
                android:textColorHint="@color/black1"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/imageAndText"
                android:lines="1"
                android:textCursorDrawable="@null"
                android:background="@null"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/oldPasswordClearIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:src="@mipmap/me_box_btn_del"
                android:layout_marginRight="5dp"
                android:visibility="gone" />

            <CheckBox
            android:id="@+id/lawsCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="5dp"
