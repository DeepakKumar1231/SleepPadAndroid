<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/purple"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Home"
        app:titleTextColor="@color/white" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">


        <TextView
            android:id="@+id/welcomeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text="Welcome!"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/purple"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/improve"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/improve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:text="You are all set to improve your sleep quality."
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/purple"
            app:layout_constraintBottom_toTopOf="@id/startmonitoring"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcomeTv"
            app:layout_constraintVertical_chainStyle="packed" />


        <TextView
            android:id="@+id/startmonitoring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:text="Click on 'Start Monitoring' before going to bed."
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/purple"
            app:layout_constraintBottom_toTopOf="@id/setUpAlarmBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/improve"
            app:layout_constraintVertical_chainStyle="packed" />

        <Button
            android:id="@+id/setUpAlarmBtn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:background="@color/yellow"
            android:backgroundTint="@color/yellow"
            android:text="Setup an Alarm"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/startmonitoringBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/startmonitoring" />

        <Button
            android:id="@+id/startmonitoringBtn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@color/yellow"
            android:text="Start Monitoring"
            android:textColor="@color/white"
            app:backgroundTint="@color/yellow"
            app:layout_constraintBottom_toBottomOf="@id/setUpAlarmBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/setUpAlarmBtn"
            app:layout_constraintTop_toBottomOf="@id/startmonitoring" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>